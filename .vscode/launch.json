{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Haven-FastAPI",
            "type": "debugpy",
            "request": "launch",
            "python": "${workspaceFolder}/ttrpg_platform/venv/Scripts/python.exe",
            "module": "uvicorn",
            "args": [
                "app.main:app", // Corrected per our last discussion!
                "--reload",
                "--port", "8000"
            ],
            "jinja": true,
            "cwd": "${workspaceFolder}/ttrpg_platform"
        },
        {
            "name": "Launch Next.js Frontend",
            "type": "node-terminal", // Use node-terminal to run npm commands
            "request": "launch",
            "command": "npm run dev", // The command you use to start your Next.js app
            "cwd": "${workspaceFolder}/my-ttrpg-frontend", // The path to your Next.js project
            "console": "integratedTerminal", // This ensures it runs in the integrated VS Code terminal
            "serverReadyAction": { // Optional: useful for automatically opening a browser
                "pattern": "started server on", // Adjust this regex if your Next.js output is different
                "uriFormat": "http://localhost:%s",
                "action": "openBrowser"
            }
        }
    ],
    // Optional: Add a compound configuration to run both at once
    "compounds": [
        {
            "name": "Full Stack Dev",
            "configurations": [
                "Python Debugger: Haven-FastAPI",
                "Launch Next.js Frontend"
            ]
        }
    ]
}